<% layout("/layouts/boilerplate") %>
<style>
#filters {
  display: flex;
  flex-wrap: nowrap; /* Prevent wrapping */
  overflow-x: auto; 
  gap: 1.5rem;
  padding: 1rem;
  align-items: center;
}

.filter {
  text-decoration: none;
  color:inherit;
  flex: 0 0 auto; /* Prevent from shrinking or stretching */
  text-align: center;
  opacity: 0.7;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.filter p {
  font-size: 0.8rem;
}

/* Optional: Hide scroll bar (for aesthetic) */
#filters::-webkit-scrollbar {
  display: none;
}

.tax-info{
  display: none;
}

.tax-toggle{
  border: 1px solid black;
  border-radius: 1rem;
  height: 2.5rem;
  padding: 1rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
  flex: 0 0 auto;
}
</style>

<body>
    <!-- <h3>All Listings</h3> -->
     <div id="filters" >
      <a class="filter" href="/trending">
        <div><i class="fa-solid fa-fire"></i></div>
         <p>Trending</p>
      </a>
      <a class="filter" href="/Rooms">
        <div><i class="fa-solid fa-bed"></i></div>
         <p>Rooms</p>
      </a>
      <a class="filter" href="/Iconic-cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
         <p>Iconic Cities</p>
      </a>
      <a class="filter" href="/mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
         <p>Mountains</p>
      </a>
      <a class="filter" href="/castles">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
         <p>Castles</p>
      </a>
      <a class="filter" href="/amazing-pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
         <p>Amazing Pools</p>
      </a>
      <a class="filter" href="/camping">
        <div><i class="fa-solid fa-campground"></i></div>
         <p>Camping</p>
      </a>
      <a class="filter" href="/farms">
        <div><i class="fa-solid fa-tractor"></i></div>
         <p>Farms</p>
      </a>
      <a class="filter" href="/arctic">
        <div><i class="fa-solid fa-snowman"></i></div>
         <p>Arctic</p>
      </a>
      <a class="filter" href="domes">
        <div><i class="fa-solid fa-igloo"></i></div>
         <p>Domes</p>
      </a>
      <a class="filter" href="/boats">
        <div><i class="fa-solid fa-sailboat"></i></div>
         <p>Boats</p>
      </a>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display Total after taxes</label>
        </div>
      </div>
     </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mt-3">
        <% for (let listing of allListings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem" />
                <div class="card-img-overlay">WonderList</div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br />
                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %> /night
                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                  </p>
                </div>
            </div>
          </a>
        <% } %>
    </div>
</body>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", ()=>{
    let TaxInfo = document.getElementsByClassName("tax-info");
    for(info of TaxInfo){
      if(info.style.display != "inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  })
</script>
